<Window x:Class="ClassWork_02_2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassWork_02_2"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label x:Name="infoThread" Content="-------" Grid.Row="0"/>
        <TextBlock x:Name="txtOut" Grid.Row="1"  Margin="5"/>
        <Button Content="Close" Grid.Row="2" Margin="10" Click="Click_Close"/>
    </Grid>
</Window>

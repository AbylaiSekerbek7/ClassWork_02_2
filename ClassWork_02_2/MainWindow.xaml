<Window x:Class="ClassWork_02_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassWork_02_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Content="Start Thread type 1" Click="StartThread1" Margin="5" Padding="5"/>
            <Button Content="Start Thread type 2" Click="StartThread2" Margin="5" Padding="5"/>
            <CheckBox x:Name="chbIsBckgrd" Content="Is background Thread" HorizontalAlignment="Center"/>
            <Button Content="Close" Click="Click_Close" Margin="5" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>
